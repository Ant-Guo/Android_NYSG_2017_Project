<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Reverse"
        android:layout_width="380dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/RotateRight"
        android:layout_width="130dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toTopOf="@+id/Reverse"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Forward" />

    <Button
        android:id="@+id/Brake"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/Forward"
        app:layout_constraintRight_toLeftOf="@+id/RotateRight"
        app:layout_constraintLeft_toRightOf="@+id/RotateLeft"
        app:layout_constraintVertical_bias="0.207" />

    <Button
        android:id="@+id/Forward"
        android:layout_width="380dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/RotateLeft"
        android:layout_width="130dp"
        android:layout_height="240dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Reverse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Forward" />

    <EditText
        android:id="@+id/status"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        app:layout_constraintBottom_toTopOf="@+id/Reverse"
        app:layout_constraintLeft_toRightOf="@+id/RotateLeft"
        app:layout_constraintRight_toLeftOf="@+id/RotateRight"
        app:layout_constraintTop_toBottomOf="@+id/Brake" />

</android.support.constraint.ConstraintLayout>